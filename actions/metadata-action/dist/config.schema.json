{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Metadata configuration file schema",
    "type": "object",
    "properties": {
        "branches-template": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "object",
                "minProperties": 1,
                "maxProperties": 1,
                "patternProperties": {
                    "^[-a-zA-Z0-9_*]+$": {
                        "type": "string"
                    }
                },
                "additionalProperties": false
            }
        },
        "dist-tags": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "object",
                "minProperties": 1,
                "maxProperties": 1,
                "patternProperties": {
                    "^[-a-zA-Z0-9_*]+$": {
                        "type": "string"
                    }
                },
                "additionalProperties": false
            }
        }
    },
    "required": [
        "branches-template",
        "dist-tags"
    ],
    "additionalProperties": false
}